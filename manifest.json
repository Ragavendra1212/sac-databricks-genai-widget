{
  "id": "com.databricks.sac.widget",
  "name": "Databricks GenAI Widget",
  "description": "Custom widget for calling Databricks Model Serving.",
  "version": "1.0.0",
  "newInstancePrefix": "DBW_",

  "properties": {
    "apiUrl": {
      "type": "string",
      "default": ""
    },
    "token": {
      "type": "string",
      "default": ""
    }
  },

  "methods": {
    "callDatabricks": {
      "description": "Calls the Databricks endpoint"
    }
  },

  "events": {
    "onResponse": {
      "description": "Fired when Databricks returns output"
    }
  },

  "webcomponents": [
    {
      "kind": "main",
      "tag": "databricks-widget",
      "url": "widget.js",

      "integrity": "",
      "attributes": []
    }
  ]
}

{
  "id": "com.example.databricks.genai.widget",
  "version": "1.0.0",
  "name": "Databricks GenAI Widget",
  "description": "Calls Databricks via proxy and displays result.",
  "type": "component",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "databricks-genai-widget",
      "url": "widget.js"
    }
  ],
  "properties": {
    "proxyUrl": {
      "type": "string",
      "defaultValue": "https://your-proxy.com/invoke",
      "description": "Databricks proxy endpoint"
    },
    "responseText": {
      "type": "string",
      "defaultValue": "",
      "description": "Databricks response"
    }
  },
  "supportedStoryModes": ["edit","view"],
  "resources": {
    "js": [
      { "url": "widget.js" }
    ]
  }
}
